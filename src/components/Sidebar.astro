---
const { items } = Astro.props;
---

<nav class="sidebar">
  {items.map((item) => (
    <details open={item.open}>
      <summary>{item.title}</summary>
      {item.children && item.children.length > 0 && (
        <ul>
          {item.children.map((child) => (
            <li><a href={child.href}>{child.title}</a></li>
          ))}
        </ul>
      )}
    </details>
  ))}
</nav>