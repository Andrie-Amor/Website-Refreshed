---
const { items } = Astro.props;
---

<nav class="sidebar">
  <ul>
    {items.map((item) => (
      <li>
        <a href={item.href}>{item.title}</a>
        {item.children && item.children.length > 0 && (
          <ul>
            {item.children.map((child) => (
              <li><a href={child.href}>{child.title}</a></li>
            ))}
          </ul>
        )}
      </li>
    ))}</nav>
